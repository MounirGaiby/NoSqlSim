# NoSqlSim Backend Configuration

# Application
APP_NAME=NoSqlSim
APP_VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB
MONGODB_VERSION=7.0
MONGODB_START_PORT=27017
MONGODB_MAX_NODES=20

# Docker
DOCKER_NETWORK_PREFIX=nosqlsim
DOCKER_CONTAINER_PREFIX=nosqlsim
DOCKER_MEMORY_LIMIT=512m

# Cluster defaults
DEFAULT_REPLICA_SET_NAME=rs0
DEFAULT_ELECTION_TIMEOUT_MS=10000
DEFAULT_HEARTBEAT_INTERVAL_MS=2000

# Monitoring
CLUSTER_POLL_INTERVAL_SECONDS=1
METRICS_RETENTION_SECONDS=300

# WebSocket
WS_HEARTBEAT_INTERVAL=30
