# NoSqlSim direnv configuration
# This file automatically activates the Nix development environment

if has nix; then
  use flake
else
  echo "WARNING: Nix is not installed. Using fallback setup."
  echo "Install Nix: https://nixos.org/download.html"
  echo ""
  echo "Falling back to manual setup..."
  
  # Fallback to venv if it exists
  if [ -d "backend/venv" ]; then
    source backend/venv/bin/activate
  fi
  
  # Add node_modules to PATH if exists
  if [ -d "frontend/node_modules/.bin" ]; then
    export PATH="$PWD/frontend/node_modules/.bin:$PATH"
  fi
fi

export PYTHONPATH="$PWD/backend:$PYTHONPATH"
